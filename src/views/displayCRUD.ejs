<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get CRUD</title>
    <style>
        table,
        th,
        td{
            border: 1px solid black;
            border-collapse: collapse;
            text-align: center;
        }
        .btn-edit{
            border: 0.5px solid;
            height: 20px;
            width: 60px;
            margin:10px;
            background-color: yellow;
            cursor: pointer;
            display: block;
            
        }
        .btn-delete{
            border: 0.5px solid;
            height: 20px;
            width: 60px;
            margin:10px;
            background-color: rgb(248, 89, 89);
            cursor: pointer;
            display: block;
        }
    </style>
</head>
<body>
    <h1>get crud from view</h1>
   
    <table style="width: 100%;">
    <tr>
        <th>Email</th>
        <th>First Name</th>
        <th>LastName</th>
        <th>Address</th>
        <th>Age</th>
        
        <th>Actions</th>
        <th>Actions</th>

    </tr>
    
    
    <% for(var i=0; i<dataTable.length; i++){ %>
        <tr>
            <td><%= dataTable[i].email %></td>
            
            <td><%= dataTable[i].firstName %></td>
            <td><%= dataTable[i].lastName %></td>
            <td><%= dataTable[i].address %></td>
            <td><%= dataTable[i].age %></td>
            <td><a href="/edit-crud?id=<%= dataTable[i].id %>" class="btn-edit">Edit</a></td>
            <td><a href="/delete-crud?id=<%= dataTable[i].id %>" class="btn-delete">Delete</a></td>
        </tr>
    <% } %>
</table>
</body>
</html>
